<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.app43.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000234"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#0000ff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDownloadDirectory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Let's Make a Directory to Download Folder" />

                    <Button
                        android:id="@+id/btnMusicDirectory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Let's Make a directory to Music folder" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDocumentsFolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Let's Make a Directory to Documents Folder" />

                    <Button
                        android:id="@+id/btnRingtonesFolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Let's Make a directory to Ringtones folder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPodcastsFolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Let's Make a Directory to Podcast Folder" />

                    <Button
                        android:id="@+id/btnMoviesFolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Let's Make a Directory to Movies Folder" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnPicturesFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's Make a Directory to Pictures Folder" />

                <Button
                    android:id="@+id/btnAlarmsFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's Make a Directory to Alarms Folder" />

                <EditText
                    android:id="@+id/edtVlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btnSaveFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save it to documents Folder in SDCard" />

                <TextView
                    android:id="@+id/txtValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" />

                <Button
                    android:id="@+id/btnRetrieveTheInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retrieve the information from SDCard" />

                <ImageView
                    android:id="@+id/imgAnimal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/bird" />

                <Button
                    android:id="@+id/btnAllowAccessPictures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Allow Access Pictures in sdcard" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayoutHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>

                <ImageSwitcher
                    android:id="@+id/imageSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>
